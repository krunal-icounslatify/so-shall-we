    },
    {
      "type": "checkbox",
      "id": "show_pagination",
      "label": {"en": "Show pagination"},
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_navigation",
      "label": {"en": "Show navigation"},
      "default": false
    },
    {
      "type": "header",
      "content": "Mobile Settings"
    },
    {
      "type": "checkbox",
      "id": "use_scroll_mobile",
      "label": "Enable horizontal scroll",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "use_grid_column_mb",
      "label": "Use grid 2 columns",
      "default": false
    },
    {
      "type": "text",
      "id": "custom_class",
      "label": "Custom classes"
    }
  ],
  "blocks": [
    {
      "type": "iconbox",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Gallary",
      "category": "Promotional"
    }
  ]
}
{% endschema %}






